{
  "name": "@thearchitech.xyz/marketplace",
  "version": "1.0.0",
  "description": "The Architech Marketplace - Adapters and Integrations",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./adapters/*": "./adapters/*/adapter.json",
    "./integrations/*": "./integrations/*/integration.json",
    "./manifest": "./manifest.json"
  },
  "files": [
    "adapters/",
    "integrations/",
    "manifest.json",
    "index.js",
    "types/"
  ],
  "keywords": [
    "architech",
    "marketplace",
    "adapters",
    "integrations",
    "blueprints"
  ],
  "author": "The Architech Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-architech-xyz/marketplace.git"
  },
  "bugs": {
    "url": "https://github.com/the-architech-xyz/marketplace/issues"
  },
  "homepage": "https://the-architech.dev",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "types:generate": "tsx scripts/generate-types.ts",
    "build": "npm run types:generate",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@thearchitech.xyz/types": "^1.1.0"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "glob": "^10.0.0"
  }
}
