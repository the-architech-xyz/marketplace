{
  "name": "@thearchitech.xyz/marketplace",
  "version": "1.9.1",
  "description": "The Architech Marketplace - Adapters and Integrations",
  "type": "commonjs",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./types": "./types/index.d.ts",
    "./adapters/*": "./adapters/*/adapter.json",
    "./integrations/*": "./integrations/*/integration.json",
    "./genomes/*": "./genomes/*.genome.ts",
    "./genomes": "./genomes/manifest.json",
    "./manifest": "./manifest.json"
  },
  "types": "./types/index.d.ts",
  "files": [
    "adapters/**/*.json",
    "adapters/**/templates/",
    "adapters/**/features/",
    "integrations/**/*.json",
    "integrations/**/templates/",
    "integrations/**/features/",
    "dist/adapters/**/*.js",
    "dist/adapters/**/*.d.ts",
    "dist/integrations/**/*.js",
    "dist/integrations/**/*.d.ts",
    "genomes/*.genome.ts",
    "genomes/manifest.json",
    "manifest.json",
    "index.js",
    "types/"
  ],
  "keywords": [
    "architech",
    "marketplace",
    "adapters",
    "integrations",
    "blueprints"
  ],
  "author": "The Architech Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-architech-xyz/marketplace.git"
  },
  "bugs": {
    "url": "https://github.com/the-architech-xyz/marketplace/issues"
  },
  "homepage": "https://the-architech.dev",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "validate": "tsx scripts/validate-blueprints.ts",
    "validate:templates": "tsx scripts/validate-templates.ts",
    "validate:conflicts": "tsx scripts/validate-conflict-resolution.ts",
    "validate:all": "npm run validate && npm run validate:templates && npm run validate:conflicts",
    "fix:conflicts": "tsx scripts/fix-conflict-resolution.ts",
    "types:generate": "tsx scripts/generate-types-cli.ts",
    "compile": "tsc",
    "build": "npm run validate:all && npm run types:generate && npm run compile",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky install",
    "precommit": "npm run validate:all && npm run types:generate"
  },
  "dependencies": {
    "@thearchitech.xyz/types": "file:../types-package",
    "@types/glob": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "glob": "^10.4.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "adapters/**/*.json": "node scripts/lint-staged-wrapper.js",
    "integrations/**/*.json": "node scripts/lint-staged-wrapper.js",
    "scripts/generate-types.ts": "node scripts/lint-staged-wrapper.js"
  }
}
