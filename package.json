{
  "name": "@thearchitech.xyz/marketplace",
  "version": "1.2.0",
  "description": "The Architech Marketplace - Adapters and Integrations",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./types": "./types/index.d.ts",
    "./adapters/*": "./adapters/*/adapter.json",
    "./integrations/*": "./integrations/*/integration.json",
    "./genomes/*": "./genomes/*.genome.ts",
    "./genomes": "./genomes/manifest.json",
    "./manifest": "./manifest.json"
  },
  "types": "./types/index.d.ts",
  "files": [
    "adapters/",
    "integrations/",
    "genomes/",
    "manifest.json",
    "index.js",
    "types/"
  ],
  "keywords": [
    "architech",
    "marketplace",
    "adapters",
    "integrations",
    "blueprints"
  ],
  "author": "The Architech Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-architech-xyz/marketplace.git"
  },
  "bugs": {
    "url": "https://github.com/the-architech-xyz/marketplace/issues"
  },
  "homepage": "https://the-architech.dev",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "types:generate": "tsx scripts/generate-types.ts",
    "build": "npm run types:generate",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "precommit": "npm run types:generate && git add types/ types/index.d.ts"
  },
  "dependencies": {
    "@thearchitech.xyz/types": "file:../types-package",
    "@types/glob": "^9.0.0"
  },
  "devDependencies": {
    "glob": "^10.4.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "adapters/**/*.json": "npm run types:generate && git add types/ types/index.d.ts",
    "integrations/**/*.json": "npm run types:generate && git add types/ types/index.d.ts",
    "scripts/generate-types.ts": "npm run types:generate && git add types/ types/index.d.ts"
  }
}
