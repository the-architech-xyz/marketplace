{
  "name": "@thearchitech.xyz/marketplace",
  "version": "0.8.2",
  "description": "The Architech Marketplace - Adapters, Connectors, Capabilities, and Features",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./types": "./types/index.js",
    "./adapters/*": "./adapters/*/adapter.json",
    "./connectors/*": "./connectors/*/connector.json",
    "./capabilities/*": "./capabilities/*/capability.json",
    "./features/*": "./features/*/feature.json",
    "./genomes/*": "./genomes/*.genome.ts",
    "./genomes": "./genomes/manifest.json",
    "./manifest": "./manifest.json"
  },
  "types": "./types/index.d.ts",
  "files": [
    "adapters/**/*.json",
    "adapters/**/templates/",
    "adapters/**/features/",
    "connectors/**/*.json",
    "connectors/**/templates/",
    "capabilities/**/*.json",
    "capabilities/**/templates/",
    "features/**/*.json",
    "features/**/templates/",
    "dist/adapters/**/*.js",
    "dist/adapters/**/*.d.ts",
    "dist/connectors/**/*.js",
    "dist/connectors/**/*.d.ts",
    "dist/capabilities/**/*.js",
    "dist/capabilities/**/*.d.ts",
    "dist/features/**/*.js",
    "dist/features/**/*.d.ts",
    "genomes/*.genome.ts",
    "genomes/manifest.json",
    "manifest.json",
    "index.js",
    "types/"
  ],
  "keywords": [
    "architech",
    "marketplace",
    "adapters",
    "connectors",
    "capabilities",
    "features",
    "blueprints"
  ],
  "author": "The Architech Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thearchitech-xyz/marketplace.git"
  },
  "bugs": {
    "url": "https://github.com/thearchitech-xyz/marketplace/issues"
  },
  "homepage": "https://thearchitech.xyz",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "validate": "tsx scripts/validation/validate-blueprints.ts",
    "validate:templates": "tsx scripts/validation/validate-templates.ts",
    "validate:conflicts": "tsx scripts/validation/validate-conflict-resolution.ts",
    "validate:contracts": "tsx scripts/validation/validate-contract-correctness.ts",
    "validate:comprehensive": "tsx scripts/validation/validate-comprehensive.ts",
    "validate:dead-templates": "tsx scripts/validation/dead-template-detector.ts",
    "validate:actions": "tsx scripts/validation/validate-blueprint-actions.ts",
    "validate:issues": "tsx scripts/validation/validate-blueprint-issues.ts",
    "validate:correctness": "tsx scripts/validation/validate-contract-correctness.ts",
    "validate:correctness:changed": "tsx scripts/validation/validate-contract-correctness.ts --changed",
    "generate:manifest": "tsx scripts/generation/generate-marketplace-manifest.ts",
    "generate:feature-manifests": "tsx scripts/generation/generate-feature-manifests.ts",
    "types:generate:constitutional": "tsx scripts/generation/generate-constitutional-types-cli.ts",
    "validate:all": "npm run validate:correctness",
    "validate:legacy": "npm run validate && npm run validate:templates && npm run validate:conflicts && npm run validate:contracts",
    "fix:conflicts": "tsx scripts/utilities/fix-conflict-resolution.ts",
    "compile": "tsc",
    "build": "npm run validate:all && npm run generate:feature-manifests && npm run compile",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky install",
    "precommit": "npm run validate:correctness"
  },
  "dependencies": {
    "@thearchitech.xyz/types": "^0.8.0",
    "@types/glob": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "glob": "^10.4.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "ts-morph": "^23.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "adapters/**/*.json": "node scripts/lint-staged-wrapper.js",
    "integrations/**/*.json": "node scripts/lint-staged-wrapper.js",
    "connectors/**/*.json": "node scripts/lint-staged-wrapper.js",
    "features/**/*.json": "node scripts/lint-staged-wrapper.js",
    "scripts/generate-types.ts": "node scripts/lint-staged-wrapper.js",
    "scripts/generate-constitutional-types.ts": "node scripts/lint-staged-wrapper.js"
  }
}
