{
  "id": "resend",
  "name": "Resend Email Service",
  "description": "Modern email API for transactional emails with Resend",
  "category": "email",
  "version": "1.0.0",
  "role": "adapter",
  "blueprint": "blueprint.ts",
  "dependencies": [],
  "provides": [
    "email-core",
    "email-templates}",
    "email-analytics}",
    "email-campaigns}"
  ],
  "limitations": "Requires Resend API key",
  "parameters": {
    "apiKey": {
      "type": "string",
      "default": "",
      "description": "Resend API key (or set RESEND_API_KEY env var)",
      "required": false
    },
    "fromEmail": {
      "type": "string",
      "default": "noreply@example.com",
      "description": "Default from email address (or set FROM_EMAIL env var)",
      "required": false
    },
    "features": {
      "core": {
        "description": "Essential email functionality (sending, basic templates)",
        "default": true
      },
      "templates": {
        "description": "Advanced email template system",
        "default": true
      },
      "analytics": {
        "description": "Email analytics and tracking",
        "default": false
      },
      "campaigns": {
        "description": "Batch sending and campaign management",
        "default": false
      }
    }
  },
  "internal_structure": {
    "core": {
      "provides": [
        "email-core"
      ],
      "templates": [
        "resend-client.ts",
        "email-types.ts",
        "send-email.ts"
      ]
    },
    "templates": {
      "prerequisites": [
        "email-core"
      ],
      "provides": [
        "email-templates"
      ],
      "templates": [
        "template-engine.ts",
        "react-email.ts",
        "preview-mode.ts"
      ]
    },
    "analytics": {
      "prerequisites": [
        "email-core"
      ],
      "provides": [
        "email-analytics"
      ],
      "templates": [
        "analytics.ts",
        "tracking.ts",
        "dashboard.ts"
      ]
    },
    "campaigns": {
      "prerequisites": [
        "email-core",
        "email-templates"
      ],
      "provides": [
        "email-campaigns"
      ],
      "templates": [
        "batch-sending.ts",
        "list-management.ts",
        "campaigns.ts"
      ]
    }
  },
  "constraints": {}
}
