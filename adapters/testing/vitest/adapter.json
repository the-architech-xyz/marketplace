{
  "id": "vitest",
  "name": "Vitest",
  "description": "Fast unit test framework powered by Vite",
  "category": "testing",
  "version": "1.0.0",
  "blueprint": "blueprint.ts",
  "dependencies": [
    "framework/nextjs"
  ],
  "provides": [
    "testing-core",
    "{{#if features.coverage}}testing-coverage{{/if}}",
    "{{#if features.ui}}testing-ui{{/if}}",
    "{{#if features.e2e}}testing-e2e{{/if}}"
  ],
  "capabilities": [
    "unit-testing",
    "integration-testing",
    "coverage",
    "watch-mode",
    "typescript",
    "jsx",
    "esm",
    "mocking",
    "snapshots",
    "parallel"
  ],
  "internal_structure": {
    "core": {
      "provides": ["testing-core"],
      "templates": [
        "vitest.config.ts",
        "test-setup.ts",
        "test-utils.ts",
        "mocks.ts"
      ]
    },
    "coverage": {
      "prerequisites": ["testing-core"],
      "provides": ["testing-coverage"],
      "templates": [
        "coverage-config.ts",
        "coverage-scripts.ts"
      ]
    },
    "ui": {
      "prerequisites": ["testing-core"],
      "provides": ["testing-ui"],
      "templates": [
        "vitest-ui.config.ts",
        "ui-scripts.ts"
      ]
    },
    "e2e": {
      "prerequisites": ["testing-core"],
      "provides": ["testing-e2e"],
      "templates": [
        "e2e-config.ts",
        "e2e-setup.ts",
        "e2e-utils.ts"
      ]
    }
  },
  "limitations": "Requires Node.js 16+ and Next.js framework",
  "parameters": {
    "environment": {
      "type": "string",
      "default": "jsdom",
      "description": "Test environment",
      "required": false,
      "options": [
        "jsdom",
        "node",
        "happy-dom"
      ]
    },
    "features": {
      "core": {
        "type": "boolean",
        "default": true,
        "description": "Basic testing setup (config, setup, utils)"
      },
      "unitTests": {
        "type": "boolean",
        "default": true,
        "description": "Unit testing capabilities"
      },
      "coverage": {
        "type": "boolean",
        "default": true,
        "description": "Code coverage reporting"
      },
      "ui": {
        "type": "boolean",
        "default": false,
        "description": "Interactive test runner UI"
      },
      "e2e": {
        "type": "boolean",
        "default": false,
        "description": "End-to-end testing support"
      },
      "integrationTests": {
        "type": "boolean",
        "default": false,
        "description": "Integration testing support"
      }
    }
  },
  "features": {
    "coverage": {
      "id": "coverage",
      "name": "Code Coverage",
      "description": "Comprehensive code coverage reporting with HTML and LCOV reports",
      "blueprint": "features/coverage.blueprint.ts",
      "category": "core",
      "parameters": {
        "threshold": {
          "type": "number",
          "default": 80,
          "description": "Coverage threshold percentage",
          "required": false
        },
        "reports": {
          "type": "array",
          "default": [
            "text",
            "html"
          ],
          "description": "Coverage report formats",
          "required": false,
          "options": [
            "text",
            "html",
            "lcov",
            "json"
          ]
        }
      }
    },
    "ui": {
      "id": "ui",
      "name": "Vitest UI",
      "description": "Interactive web-based test runner interface",
      "blueprint": "features/ui.blueprint.ts",
      "category": "premium",
      "parameters": {
        "port": {
          "type": "number",
          "default": 51204,
          "description": "UI server port",
          "required": false
        },
        "open": {
          "type": "boolean",
          "default": true,
          "description": "Auto-open UI in browser",
          "required": false
        }
      }
    }
  },
  "constraints": {}
}