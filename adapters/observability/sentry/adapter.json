{
  "id": "sentry",
  "name": "Sentry Error Monitoring",
  "description": "Complete error monitoring and performance tracking with Sentry",
  "category": "observability",
  "version": "1.0.0",
  "blueprint": "blueprint.ts",
  "dependencies": [],
  "provides": [
    "monitoring-core",
    "{{#if features.performance}}monitoring-performance{{/if}}",
    "{{#if features.alerts}}monitoring-alerts{{/if}}",
    "{{#if features.enterprise}}monitoring-enterprise{{/if}}"
  ],
  "limitations": "Requires Sentry DSN",
  "parameters": {
    "dsn": {
      "type": "string",
      "default": "",
      "description": "Sentry DSN",
      "required": true
    },
    "environment": {
      "type": "string",
      "default": "development",
      "description": "Environment name",
      "required": false
    },
    "features": {
      "core": {
        "description": "Essential monitoring (error tracking, basic performance)",
        "default": true
      },
      "performance": {
        "description": "Advanced performance monitoring",
        "default": false
      },
      "alerts": {
        "description": "Custom alerts and dashboard",
        "default": false
      },
      "enterprise": {
        "description": "Enterprise features (profiling, custom metrics)",
        "default": false
      }
    },
    "release": {
      "type": "string",
      "default": "",
      "description": "Release version",
      "required": false
    }
  },
  "internal_structure": {
    "core": {
      "provides": ["monitoring-core"],
      "templates": [
        "sentry-config.ts",
        "error-tracking.ts",
        "basic-performance.ts"
      ]
    },
    "performance": {
      "prerequisites": ["monitoring-core"],
      "provides": ["monitoring-performance"],
      "templates": [
        "web-vitals.ts",
        "transactions.ts",
        "performance-utils.ts"
      ]
    },
    "alerts": {
      "prerequisites": ["monitoring-core"],
      "provides": ["monitoring-alerts"],
      "templates": [
        "alerts.ts",
        "dashboard.ts",
        "notifications.ts"
      ]
    },
    "enterprise": {
      "prerequisites": ["monitoring-core", "monitoring-performance"],
      "provides": ["monitoring-enterprise"],
      "templates": [
        "profiling.ts",
        "custom-metrics.ts",
        "advanced-dashboard.ts"
      ]
    }
  },
  "constraints": {}
}