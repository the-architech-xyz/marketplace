{
  "id": "shadcn-ui",
  "name": "Shadcn/ui",
  "description": "Beautifully designed components built with Radix UI and Tailwind CSS",
  "category": "ui",
  "version": "1.0.0",
  "blueprint": "blueprint.ts",
  "provides": [
    {
      "name": "shadcn-ui",
      "version": "2.6.4",
      "description": "Shadcn/ui component library"
    },
    {
      "name": "radix-ui",
      "version": "1.0.0",
      "description": "Radix UI primitive components"
    }
  ],
  "prerequisites": {
    "capabilities": [
      {
        "name": "react",
        "version": ">=18.0.0",
        "description": "React library required"
      },
      {
        "name": "tailwind",
        "version": ">=3.0.0",
        "description": "Tailwind CSS required"
      },
      {
        "name": "typescript",
        "version": ">=4.0.0",
        "description": "TypeScript support required"
      }
    ]
  },
  "capabilities": [
    "components",
    "tailwind",
    "radix-ui",
    "accessibility",
    "dark-mode",
    "theming",
    "responsive",
    "typescript",
    "form-validation",
    "animations",
    "icons",
    "theme-switching",
    "comprehensive-utils",
    "production-ready"
  ],
  "limitations": "Requires React framework and Tailwind CSS",
  "parameters": {
    "components": {
      "type": "array",
      "default": [
        "button",
        "input",
        "card",
        "dialog",
        "form",
        "table",
        "badge",
        "avatar",
        "dropdown-menu",
        "toast",
        "sheet",
        "tabs",
        "accordion",
        "carousel",
        "calendar",
        "date-picker",
        "alert-dialog",
        "checkbox",
        "collapsible",
        "context-menu",
        "hover-card",
        "menubar",
        "navigation-menu",
        "popover",
        "progress",
        "radio-group",
        "scroll-area",
        "slider",
        "toggle",
        "toggle-group"
      ],
      "description": "Components to install (comprehensive set by default)",
      "required": false
    }
  },
  "features": {
    "theming": {
      "id": "theming",
      "name": "Theming Dependencies",
      "description": "Install theming dependencies (next-themes)",
      "blueprint": "features/theming.blueprint.ts",
      "category": "premium",
      "parameters": {}
    },
    "accessibility": {
      "id": "accessibility",
      "name": "Accessibility Dependencies",
      "description": "Install accessibility dependencies (eslint-plugin-jsx-a11y)",
      "blueprint": "features/accessibility.blueprint.ts",
      "category": "premium",
      "parameters": {}
    }
  },
  "constraints": {}
}