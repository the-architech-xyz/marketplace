{
  "id": "zustand",
  "name": "Zustand State Management",
  "description": "Golden Core state management with Zustand - powerful, performant, and minimal boilerplate",
  "category": "state",
  "version": "4.4.0",
  "blueprint": "blueprint.ts",
  "requirements": {
    "capabilities": ["react-framework", "typescript"]
  },
  "capabilities": [
    "state-management",
    "persistence",
    "devtools",
    "middleware",
    "subscriptions",
    "typescript",
    "lightweight",
    "immer-integration",
    "type-safety",
    "performance",
    "golden-core"
  ],
  "limitations": "Requires React 18+ and TypeScript for optimal experience",
  "parameters": {
    "persistence": {
      "type": "boolean",
      "default": true,
      "description": "Enable state persistence",
      "required": false
    },
    "devtools": {
      "type": "boolean",
      "default": true,
      "description": "Enable Redux DevTools",
      "required": false
    },
    "immer": {
      "type": "boolean",
      "default": true,
      "description": "Enable Immer for immutable updates",
      "required": false
    },
    "middleware": {
      "type": "array",
      "default": [
        "persist",
        "devtools"
      ],
      "description": "Middleware to use",
      "required": false,
      "options": [
        "persist",
        "devtools",
        "subscribeWithSelector",
        "immer"
      ]
    }
  },
  "features": {
    "persistence": {
      "id": "persistence",
      "name": "State Persistence",
      "description": "Persist state to localStorage, sessionStorage, or custom storage",
      "blueprint": "features/persistence.blueprint.ts",
      "category": "core",
      "parameters": {
        "storage": {
          "type": "string",
          "default": "localStorage",
          "description": "Storage type to use",
          "required": false,
          "options": [
            "localStorage",
            "sessionStorage",
            "indexedDB",
            "custom"
          ]
        },
        "encryption": {
          "type": "boolean",
          "default": false,
          "description": "Enable state encryption",
          "required": false
        }
      }
    },
    "devtools": {
      "id": "devtools",
      "name": "Redux DevTools",
      "description": "Integration with Redux DevTools for debugging",
      "blueprint": "features/devtools.blueprint.ts",
      "category": "core",
      "parameters": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable DevTools integration",
          "required": false
        },
        "name": {
          "type": "string",
          "default": "zustand-store",
          "description": "Store name in DevTools",
          "required": false
        }
      }
    }
  },
  "constraints": {}
}