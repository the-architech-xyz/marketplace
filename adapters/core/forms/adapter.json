{
  "id": "forms",
  "name": "Forms",
  "description": "Golden Core form handling with validation using React Hook Form and Zod",
  "category": "core",
  "version": "2.0.0",
  "blueprint": "blueprint.ts",
  "requirements": {
    "capabilities": ["react-framework", "typescript"]
  },
  "capabilities": [
    "form-validation",
    "schema-validation",
    "react-hook-form",
    "zod",
    "typescript",
    "form-handling",
    "validation",
    "error-handling",
    "golden-core",
    "type-safety",
    "performance",
    "accessibility"
  ],
  "limitations": "Requires React 18+ and TypeScript for optimal experience",
  "parameters": {
    "zod": {
      "type": "boolean",
      "default": true,
      "description": "Enable Zod for schema validation",
      "required": false
    },
    "reactHookForm": {
      "type": "boolean",
      "default": true,
      "description": "Enable React Hook Form for form handling",
      "required": false
    },
    "resolvers": {
      "type": "boolean",
      "default": true,
      "description": "Enable @hookform/resolvers for Zod integration",
      "required": false
    },
    "accessibility": {
      "type": "boolean",
      "default": true,
      "description": "Enable accessibility features",
      "required": false
    },
    "devtools": {
      "type": "boolean",
      "default": true,
      "description": "Enable React Hook Form DevTools",
      "required": false
    }
  },
  "constraints": {
    "reactVersion": ">=18.0.0",
    "typescriptVersion": ">=4.5.0"
  }
}
