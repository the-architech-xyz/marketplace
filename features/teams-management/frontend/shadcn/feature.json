{
  "id": "feature:teams-management/shadcn",
  "name": "Teams Management Feature (Shadcn)",
  "description": "Complete team management UI using Shadcn components",
  "type": "feature",
  "version": "1.0.0",
  "prerequisites": {
    "capabilities": ["teams-management-backend-better-auth-nextjs"],
    "adapters": ["ui/shadcn-ui"]
  },
  "provides": ["teams-ui"],
  "parameters": {
    "features": {
      "type": "object",
      "default": {
        "teamList": true,
        "teamCreation": true,
        "memberManagement": true,
        "teamSettings": true,
        "teamDashboard": true,
        "advancedPermissions": false,
        "teamAnalytics": false,
        "teamBilling": false
      },
      "description": "Teams management UI features to enable",
      "required": false
    },
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light", "minimal"]
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
