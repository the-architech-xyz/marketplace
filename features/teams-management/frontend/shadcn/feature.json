{
  "id": "features/teams-management/frontend/shadcn",
  "name": "Teams Management Feature (Shadcn)",
  "description": "Complete team management UI using Shadcn components",
  "type": "feature",
  "version": "1.0.0",
  "prerequisites": {
    "capabilities": ["teams-management-backend-better-auth-nextjs"],
    "adapters": ["ui/shadcn-ui"]
  },
  "provides": [
    "teams-core",
    "{{#if features.advanced}}teams-advanced{{/if}}",
    "{{#if features.analytics}}teams-analytics{{/if}}",
    "{{#if features.billing}}teams-billing{{/if}}"
  ],
  "parameters": {
    "features": {
      "core": {
        "description": "Basic team management (list, creation, member management)",
        "default": true
      },
      "advanced": {
        "description": "Advanced team features (settings, permissions, dashboard)",
        "default": false
      },
      "analytics": {
        "description": "Team analytics and reporting",
        "default": false
      },
      "billing": {
        "description": "Team billing and usage tracking",
        "default": false
      }
    },
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light", "minimal"]
    }
  },
  "internal_structure": {
    "core": {
      "provides": ["teams-core"],
      "templates": [
        "TeamList.tsx",
        "TeamCreation.tsx",
        "MemberManagement.tsx",
        "TeamTypes.tsx",
        "useTeams.ts"
      ]
    },
    "advanced": {
      "prerequisites": ["teams-core"],
      "provides": ["teams-advanced"],
      "templates": [
        "TeamSettings.tsx",
        "Permissions.tsx",
        "TeamDashboard.tsx",
        "AdvancedTypes.tsx",
        "useAdvancedTeams.ts"
      ]
    },
    "analytics": {
      "prerequisites": ["teams-core"],
      "provides": ["teams-analytics"],
      "templates": [
        "TeamMetrics.tsx",
        "UsageCharts.tsx",
        "AnalyticsDashboard.tsx",
        "AnalyticsTypes.tsx",
        "useTeamAnalytics.ts"
      ]
    },
    "billing": {
      "prerequisites": ["teams-core", "teams-advanced"],
      "provides": ["teams-billing"],
      "templates": [
        "BillingDashboard.tsx",
        "UsageTracking.tsx",
        "BillingSettings.tsx",
        "BillingTypes.tsx",
        "useTeamBilling.ts"
      ]
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
