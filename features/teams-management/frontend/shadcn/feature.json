{
  "id": "features/teams-management/frontend/shadcn",
  "name": "Teams Management Feature (Shadcn)",
  "description": "Complete team management UI using Shadcn components",
  "type": "feature",
  "version": "1.0.0",
  "role": "frontend-feature",
  "prerequisites": {
    "capabilities": [
      "teams-management-backend-better-auth-nextjs"
    ],
    "adapters": [
      "ui/shadcn-ui"
    ]
  },
  "requires": [],
  "provides": [
    "teams-core",
    "teams-advanced}",
    "teams-analytics}",
    "teams-billing}"
  ],
  "parameters": {
    "features": {
      "core": {
        "type": "boolean",
        "default": true,
        "description": "Basic team management (list, creation, member management)"
      },
      "teams": {
        "type": "boolean",
        "default": true,
        "description": "Enable team management UI"
      },
      "members": {
        "type": "boolean",
        "default": true,
        "description": "Enable member management UI"
      },
      "invitations": {
        "type": "boolean",
        "default": true,
        "description": "Enable team invitations UI"
      },
      "roles": {
        "type": "boolean",
        "default": true,
        "description": "Enable role management UI"
      },
      "billing": {
        "type": "boolean",
        "default": false,
        "description": "Team billing and usage tracking"
      },
      "analytics": {
        "type": "boolean",
        "default": false,
        "description": "Team analytics and reporting"
      },
      "advanced": {
        "type": "boolean",
        "default": false,
        "description": "Advanced team features (settings, permissions, dashboard)"
      }
    },
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": [
        "default",
        "dark",
        "light",
        "minimal"
      ]
    }
  },
  "internal_structure": {
    "core": {
      "provides": [
        "teams-core"
      ],
      "templates": [
        "TeamList.tsx",
        "TeamCreation.tsx",
        "MemberManagement.tsx",
        "TeamTypes.tsx",
        "useTeams.ts"
      ]
    },
    "advanced": {
      "prerequisites": [
        "teams-core"
      ],
      "provides": [
        "teams-advanced"
      ],
      "templates": [
        "TeamSettings.tsx",
        "Permissions.tsx",
        "TeamDashboard.tsx",
        "AdvancedTypes.tsx",
        "useAdvancedTeams.ts"
      ]
    },
    "analytics": {
      "prerequisites": [
        "teams-core"
      ],
      "provides": [
        "teams-analytics"
      ],
      "templates": [
        "TeamMetrics.tsx",
        "UsageCharts.tsx",
        "AnalyticsDashboard.tsx",
        "AnalyticsTypes.tsx",
        "useTeamAnalytics.ts"
      ]
    },
    "billing": {
      "prerequisites": [
        "teams-core",
        "teams-advanced"
      ],
      "requires_capabilities": [
        "payments-core",
        "payments-subscriptions"
      ],
      "requires_features": [
        "payments/frontend/shadcn"
      ],
      "provides": [
        "teams-billing"
      ],
      "templates": [
        "BillingDashboard.tsx",
        "UsageTracking.tsx",
        "BillingSettings.tsx",
        "BillingTypes.tsx",
        "useTeamBilling.ts"
      ]
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
