{
  "name": "teams-management-tech-stack",
  "version": "1.0.0",
  "description": "Technology-agnostic stack layer for Teams Management feature",
  "category": "tech-stack",
  "provides": [
    "teams-schemas",
    "teams-stores",
    "teams-hooks-wrapper"
  ],
  "role": "tech-stack-layer",
  "tags": [
    "teams-management",
    "types",
    "schemas",
    "hooks",
    "stores",
    "tech-stack"
  ],
  "moduleType": "feature",
  "blueprint": "./blueprint.ts",
  "parameters": {
    "type": "object",
    "properties": {
      "featureName": {
        "type": "string",
        "description": "The name of the feature (e.g., 'teams-management')",
        "default": "teams-management"
      },
      "featurePath": {
        "type": "string",
        "description": "The path to the feature (e.g., 'teams-management')",
        "default": "teams-management"
      },
      "hasTypes": {
        "type": "boolean",
        "description": "Whether to generate TypeScript types",
        "default": true
      },
      "hasSchemas": {
        "type": "boolean",
        "description": "Whether to generate Zod schemas",
        "default": true
      },
      "hasHooks": {
        "type": "boolean",
        "description": "Whether to generate TanStack Query hooks",
        "default": true
      },
      "hasStores": {
        "type": "boolean",
        "description": "Whether to generate Zustand stores",
        "default": true
      },
      "hasApiRoutes": {
        "type": "boolean",
        "description": "Whether to generate API routes",
        "default": false
      },
      "hasValidation": {
        "type": "boolean",
        "description": "Whether to generate validation layer",
        "default": false
      }
    },
    "required": [
      "featureName",
      "featurePath"
    ]
  },
  "dependencies": {
    "direct": [
      "zod",
      "@tanstack/react-query",
      "zustand",
      "immer",
      "sonner"
    ]
  },
  "devDependencies": [
    "@types/node",
    "typescript"
  ],
  "id": "features/teams-management/tech-stack",
  "type": "feature"
}
