{
  "id": "features/observability/sentry-shadcn",
  "name": "Sentry Dashboard UI (Shadcn)",
  "description": "User-facing Sentry monitoring dashboard with Shadcn UI components. Browse errors, view performance metrics, configure alerts.",
  "category": "observability",
  "version": "1.0.0",
  "blueprint": "blueprint.ts",
  "dependencies": ["ui/shadcn-ui"],
  "prerequisites": {
    "technologies": ["observability/sentry-core"],
    "connectors": ["sentry/nextjs"]
  },
  "provides": [
    "sentry-dashboard-ui",
    "{{#if features.errorBrowser}}sentry-error-browser{{/if}}",
    "{{#if features.performance}}sentry-performance-dashboard{{/if}}",
    "{{#if features.alerts}}sentry-alerts-config{{/if}}"
  ],
  "requires": {
    "components": {
      "ui/shadcn-ui": [
        "button",
        "card",
        "table",
        "dialog",
        "tabs",
        "badge",
        "select",
        "input",
        "switch",
        "chart",
        "skeleton",
        "alert",
        "dropdown-menu"
      ]
    }
  },
  "parameters": {
    "features": {
      "dashboard": {
        "description": "Main Sentry dashboard with overview",
        "default": true
      },
      "errorBrowser": {
        "description": "Browse and filter captured errors",
        "default": true
      },
      "performance": {
        "description": "Performance metrics and charts",
        "default": false
      },
      "alerts": {
        "description": "Alert configuration UI",
        "default": false
      }
    },
    "dashboardPath": {
      "type": "string",
      "default": "/dashboard/monitoring",
      "description": "Path to mount the Sentry dashboard"
    },
    "refreshInterval": {
      "type": "number",
      "default": 30000,
      "description": "Auto-refresh interval (ms) for dashboard data"
    }
  },
  "internal_structure": {
    "dashboard": {
      "provides": ["sentry-dashboard-ui"],
      "templates": [
        "pages/monitoring-dashboard.tsx",
        "components/monitoring-overview.tsx",
        "components/monitoring-stats.tsx",
        "hooks/use-monitoring-data.ts"
      ]
    },
    "errorBrowser": {
      "prerequisites": ["sentry-dashboard-ui"],
      "provides": ["sentry-error-browser"],
      "templates": [
        "pages/errors-page.tsx",
        "components/error-list.tsx",
        "components/error-details-dialog.tsx",
        "components/error-filters.tsx"
      ]
    },
    "performance": {
      "prerequisites": ["sentry-dashboard-ui"],
      "provides": ["sentry-performance-dashboard"],
      "templates": [
        "pages/performance-page.tsx",
        "components/performance-chart.tsx",
        "components/web-vitals-card.tsx"
      ]
    },
    "alerts": {
      "prerequisites": ["sentry-dashboard-ui"],
      "provides": ["sentry-alerts-config"],
      "templates": [
        "pages/alerts-page.tsx",
        "components/alert-config-form.tsx",
        "components/alert-rules-list.tsx"
      ]
    }
  }
}
