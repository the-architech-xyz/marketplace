{
  "id": "monitoring",
  "name": "Monitoring Capability",
  "description": "Complete monitoring capability with error tracking, performance monitoring, and user feedback using Sentry",
  "version": "1.0.0",
  "category": "feature",
  "contract": {
    "hooks": {
      "useErrorTracking": "UseQueryResult<ErrorData[], Error>",
      "useErrorDetails": "UseQueryResult<ErrorData, Error>",
      "useErrorTrends": "UseQueryResult<ErrorTrend[], Error>",
      "useResolveError": "UseMutationResult<{ success: boolean }, Error, string>",
      "useIgnoreError": "UseMutationResult<{ success: boolean }, Error, string>",
      "useUpdateErrorStatus": "UseMutationResult<{ success: boolean }, Error, { errorId: string; status: 'resolved' | 'ignored' | 'unresolved' }>",
      "usePerformanceMetrics": "UseQueryResult<PerformanceMetrics, Error>",
      "usePerformanceTrends": "UseQueryResult<PerformanceTrend[], Error>",
      "useUserFeedback": "UseQueryResult<UserFeedback[], Error>",
      "useSubmitFeedback": "UseMutationResult<{ success: boolean; feedbackId: string }, Error, UserFeedbackData>",
      "useSentryConfig": "UseQueryResult<SentryConfig, Error>"
    },
    "api": {
      "endpoints": ["/api/monitoring/errors", "/api/monitoring/performance", "/api/monitoring/feedback", "/api/monitoring/config"],
      "methods": ["POST", "GET", "PATCH", "DELETE"]
    },
    "types": ["ErrorData", "PerformanceMetrics", "UserFeedback", "SentryConfig", "ErrorTrend", "PerformanceTrend", "UserFeedbackData"]
  },
  "prerequisites": {
    "adapters": [
      "sentry"
    ],
    "integrators": [
      "sentry-nextjs-integration"
    ],
    "capabilities": [
      "error-monitoring",
      "performance-tracking"
    ]
  },
  "provides": {
    "capabilities": [
      "error-tracking",
      "performance-monitoring",
      "user-feedback",
      "monitoring-analytics"
    ]
  },
  "parameters": {
    "backend": {
      "type": "select",
      "default": "sentry-nextjs",
      "description": "Backend implementation for monitoring services",
      "required": true,
      "options": ["sentry-nextjs", "sentry-express", "sentry-fastify"]
    },
    "frontend": {
      "type": "select",
      "default": "shadcn",
      "description": "Frontend implementation for monitoring UI",
      "required": true,
      "options": ["shadcn", "mui", "chakra"]
    },
    "features": {
      "type": "object",
      "default": {
        "errorTracking": true,
        "performanceMonitoring": true,
        "userFeedback": true,
        "monitoringAnalytics": true
      },
      "description": "Monitoring features to enable",
      "required": false
    },
    "environments": {
      "type": "array",
      "default": ["production", "staging", "development"],
      "description": "Environments to monitor",
      "required": false
    }
  },
  "implementations": {
    "backend": [
      "sentry-nextjs",
      "sentry-express",
      "sentry-fastify"
    ],
    "frontend": [
      "shadcn",
      "mui",
      "chakra"
    ]
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
