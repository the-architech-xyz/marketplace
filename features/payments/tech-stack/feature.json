{
  "name": "payments-tech-stack",
  "version": "1.0.0",
  "description": "Technology-agnostic stack layer for Payments feature",
  "category": "tech-stack",
  "provides": [
    "payments-schemas",
    "payments-stores",
    "payments-hooks-generic"
  ],
  "role": "tech-stack-layer",
  "tags": [
    "payments",
    "types",
    "schemas",
    "hooks",
    "stores",
    "tech-stack"
  ],
  "moduleType": "feature",
  "blueprint": "./blueprint.ts",
  "parameters": {
    "type": "object",
    "properties": {
      "featureName": {
        "type": "string",
        "description": "The name of the feature (e.g., 'payments')",
        "default": "payments"
      },
      "featurePath": {
        "type": "string",
        "description": "The path to the feature (e.g., 'payments')",
        "default": "payments"
      },
      "hasTypes": {
        "type": "boolean",
        "description": "Whether to generate TypeScript types",
        "default": true
      },
      "hasSchemas": {
        "type": "boolean",
        "description": "Whether to generate Zod schemas",
        "default": true
      },
      "hasHooks": {
        "type": "boolean",
        "description": "Whether to generate TanStack Query hooks",
        "default": true
      },
      "hasStores": {
        "type": "boolean",
        "description": "Whether to generate Zustand stores",
        "default": true
      },
      "hasApiRoutes": {
        "type": "boolean",
        "description": "Whether to generate API routes",
        "default": false
      },
      "hasValidation": {
        "type": "boolean",
        "description": "Whether to generate validation layer",
        "default": false
      }
    },
    "required": [
      "featureName",
      "featurePath"
    ]
  },
  "dependencies": [
    "zod",
    "@tanstack/react-query",
    "zustand",
    "immer",
    "sonner"
  ],
  "devDependencies": [
    "@types/node",
    "typescript"
  ],
  "id": "features/payments/tech-stack",
  "type": "feature"
}
