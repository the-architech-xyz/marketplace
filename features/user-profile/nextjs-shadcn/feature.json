{
  "id": "user-profile-nextjs-shadcn",
  "name": "User Profile Management (Next.js + Shadcn)",
  "description": "Complete user profile management system with Next.js and Shadcn/ui",
  "version": "1.0.0",
  "category": "feature",
  "blueprint": "blueprint.ts",
  "prerequisites": {
    "adapters": [
      "nextjs",
      "shadcn-ui",
      "better-auth"
    ],
    "integrators": [
      "better-auth-nextjs"
    ]
  },
  "capabilities": [
    "profile-management",
    "avatar-upload",
    "preferences-settings",
    "account-settings",
    "security-settings",
    "notification-preferences"
  ],
  "parameters": {
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light"]
    },
    "features": {
      "type": "object",
      "default": {
        "avatarUpload": true,
        "preferences": true,
        "security": true,
        "notifications": true,
        "exportData": true
      },
      "description": "User profile features to enable",
      "required": false
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
