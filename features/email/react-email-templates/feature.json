{
  "id": "features/email/react-email-templates",
  "name": "React Email Templates",
  "description": "Pre-built React-based email templates using @react-email/components. Compiles .tsx templates to provider-agnostic HTML strings.",
  "category": "email",
  "version": "1.0.0",
  "blueprint": "blueprint.ts",
  "dependencies": [],
  "prerequisites": {
    "technologies": ["email/resend"]
  },
  "provides": [
    "email-templates-core",
    "{{#if features.auth}}email-templates-auth{{/if}}",
    "{{#if features.payments}}email-templates-payments{{/if}}",
    "{{#if features.organizations}}email-templates-organizations{{/if}}"
  ],
  "parameters": {
    "features": {
      "core": {
        "description": "Core email templates (welcome, notifications)",
        "default": true
      },
      "auth": {
        "description": "Authentication email templates (password reset, verification, 2FA)",
        "default": true
      },
      "payments": {
        "description": "Payment email templates (confirmation, receipts)",
        "default": false
      },
      "organizations": {
        "description": "Organization email templates (invitations, updates)",
        "default": false
      }
    },
    "brandColor": {
      "type": "string",
      "default": "#000000",
      "description": "Primary brand color for email templates"
    },
    "logo": {
      "type": "string",
      "default": "",
      "description": "URL to company logo for email headers"
    }
  },
  "internal_structure": {
    "core": {
      "provides": ["email-templates-core"],
      "templates": [
        "render-template.ts",
        "template-registry.ts",
        "templates/welcome-email.tsx",
        "templates/notification-email.tsx"
      ]
    },
    "auth": {
      "prerequisites": ["email-templates-core"],
      "provides": ["email-templates-auth"],
      "templates": [
        "templates/password-reset-email.tsx",
        "templates/email-verification-email.tsx",
        "templates/magic-link-email.tsx",
        "templates/two-factor-setup-email.tsx"
      ]
    },
    "payments": {
      "prerequisites": ["email-templates-core"],
      "provides": ["email-templates-payments"],
      "templates": [
        "templates/payment-confirmation-email.tsx",
        "templates/subscription-created-email.tsx",
        "templates/subscription-cancelled-email.tsx"
      ]
    },
    "organizations": {
      "prerequisites": ["email-templates-core"],
      "provides": ["email-templates-organizations"],
      "templates": [
        "templates/organization-invitation-email.tsx"
      ]
    }
  }
}
