{
  "id": "graph-visualizer",
  "name": "Graph Visualizer Capability",
  "description": "Interactive graph visualizer for displaying project architecture and dependencies",
  "version": "1.0.0",
  "category": "feature",
  "contract": {
    "hooks": {
      "useGraphData": "UseQueryResult<GraphData, Error>",
      "useNodes": "UseQueryResult<Node[], Error>",
      "useEdges": "UseQueryResult<Edge[], Error>",
      "useLayout": "UseQueryResult<LayoutConfig, Error>",
      "useNodeTypes": "UseQueryResult<NodeType[], Error>",
      "useEdgeTypes": "UseQueryResult<EdgeType[], Error>",
      "useGraphHistory": "UseQueryResult<GraphSnapshot[], Error>",
      "useExportGraph": "UseMutationResult<ExportResult, Error, ExportOptions>",
      "useImportGraph": "UseMutationResult<GraphData, Error, ImportData>",
      "useSaveGraph": "UseMutationResult<{ success: boolean; graphId: string }, Error, SaveGraphData>",
      "useLoadGraph": "UseMutationResult<GraphData, Error, LoadGraphData>",
      "useUpdateLayout": "UseMutationResult<LayoutConfig, Error, LayoutConfig>",
      "useAddNode": "UseMutationResult<Node, Error, AddNodeData>",
      "useUpdateNode": "UseMutationResult<Node, Error, UpdateNodeData>",
      "useDeleteNode": "UseMutationResult<{ success: boolean }, Error, string>",
      "useAddEdge": "UseMutationResult<Edge, Error, AddEdgeData>",
      "useUpdateEdge": "UseMutationResult<Edge, Error, UpdateEdgeData>",
      "useDeleteEdge": "UseMutationResult<{ success: boolean }, Error, string>"
    },
    "api": {
      "endpoints": ["/api/graph/data", "/api/graph/nodes", "/api/graph/edges", "/api/graph/layout", "/api/graph/export", "/api/graph/import", "/api/graph/save", "/api/graph/load"],
      "methods": ["POST", "GET", "PATCH", "DELETE"]
    },
    "types": ["GraphData", "Node", "Edge", "LayoutConfig", "NodeType", "EdgeType", "GraphSnapshot", "ExportResult", "ExportOptions", "ImportData", "SaveGraphData", "LoadGraphData", "AddNodeData", "UpdateNodeData", "AddEdgeData", "UpdateEdgeData"]
  },
  "prerequisites": {
    "adapters": [
      "react-flow",
      "shadcn-ui"
    ],
    "integrators": [
      "zustand-nextjs-integration"
    ],
    "capabilities": [
      "graph-visualization",
      "state-management"
    ]
  },
  "provides": {
    "capabilities": [
      "interactive-graphs",
      "node-management",
      "edge-management",
      "layout-algorithms",
      "graph-export-import",
      "graph-persistence"
    ]
  },
  "parameters": {
    "backend": {
      "type": "select",
      "default": "nextjs",
      "description": "Backend implementation for graph data management",
      "required": true,
      "options": ["nextjs", "express", "fastify"]
    },
    "frontend": {
      "type": "select",
      "default": "react-flow",
      "description": "Frontend implementation for graph visualization",
      "required": true,
      "options": ["react-flow", "vis-network", "d3"]
    },
    "features": {
      "type": "object",
      "default": {
        "interactiveGraph": true,
        "nodeTypes": true,
        "edgeTypes": true,
        "minimap": true,
        "controls": true,
        "background": true,
        "selection": true,
        "dragging": true,
        "zooming": true,
        "panning": true,
        "export": true,
        "import": true
      },
      "description": "Graph visualizer features to enable",
      "required": false
    }
  },
  "implementations": {
    "backend": [
      "nextjs",
      "express",
      "fastify"
    ],
    "frontend": [
      "react-flow",
      "vis-network",
      "d3"
    ]
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
