{
  "id": "web3-dashboard-nextjs-shadcn",
  "name": "Web3 Dashboard (Next.js + Shadcn)",
  "description": "Complete Web3 dashboard with Next.js and Shadcn/ui",
  "version": "1.0.0",
  "category": "feature",
  "blueprint": "blueprint.ts",
  "prerequisites": {
    "adapters": [
      "nextjs",
      "shadcn-ui",
      "web3"
    ],
    "integrators": [
      "web3-nextjs"
    ]
  },
  "capabilities": [
    "wallet-management",
    "transaction-management",
    "network-switching",
    "balance-display",
    "web3-dashboard"
  ],
  "parameters": {
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light"]
    },
    "features": {
      "type": "object",
      "default": {
        "walletCard": true,
        "transactionCard": true,
        "networkSwitcher": true,
        "connectButton": true,
        "balanceDisplay": true,
        "transactionForm": true
      },
      "description": "Web3 dashboard features to enable",
      "required": false
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
