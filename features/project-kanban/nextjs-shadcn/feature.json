{
  "id": "project-kanban-nextjs-shadcn",
  "name": "Project Kanban Board (Next.js + Shadcn)",
  "description": "Complete project management with Kanban board using Next.js and Shadcn/ui",
  "version": "1.0.0",
  "category": "feature",
  "blueprint": "blueprint.ts",
  "prerequisites": {
    "adapters": [
      "nextjs",
      "shadcn-ui",
      "drizzle",
      "better-auth"
    ],
    "integrators": [
      "drizzle-nextjs",
      "better-auth-nextjs"
    ]
  },
  "capabilities": [
    "kanban-board",
    "task-management",
    "project-management",
    "team-collaboration",
    "progress-tracking",
    "deadline-management"
  ],
  "parameters": {
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light"]
    },
    "features": {
      "type": "object",
      "default": {
        "dragAndDrop": true,
        "assignees": true,
        "dueDates": true,
        "labels": true,
        "attachments": true,
        "comments": true,
        "timeTracking": true
      },
      "description": "Kanban board features to enable",
      "required": false
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
