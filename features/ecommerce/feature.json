{
  "id": "ecommerce",
  "name": "E-commerce Capability",
  "description": "Complete e-commerce capability with products, cart, orders, and inventory management",
  "version": "1.0.0",
  "category": "feature",
  "contract": {
    "hooks": {
      "useProducts": "UseQueryResult<Product[], Error>",
      "useProduct": "UseQueryResult<Product, Error>",
      "useProductCategories": "UseQueryResult<Category[], Error>",
      "useProductSearch": "UseQueryResult<Product[], Error>",
      "useProductReviews": "UseQueryResult<Review[], Error>",
      "useCreateProduct": "UseMutationResult<Product, Error, CreateProductData>",
      "useUpdateProduct": "UseMutationResult<Product, Error, UpdateProductData>",
      "useDeleteProduct": "UseMutationResult<{ success: boolean }, Error, string>",
      "useCart": "UseQueryResult<Cart, Error>",
      "useCartItems": "UseQueryResult<CartItem[], Error>",
      "useAddToCart": "UseMutationResult<CartItem, Error, AddToCartData>",
      "useUpdateCartItem": "UseMutationResult<CartItem, Error, UpdateCartItemData>",
      "useRemoveFromCart": "UseMutationResult<{ success: boolean }, Error, string>",
      "useClearCart": "UseMutationResult<{ success: boolean }, Error, void>",
      "useCartCalculations": "UseQueryResult<CartCalculations, Error>",
      "useOrders": "UseQueryResult<Order[], Error>",
      "useOrder": "UseQueryResult<Order, Error>",
      "useCreateOrder": "UseMutationResult<Order, Error, CreateOrderData>",
      "useUpdateOrderStatus": "UseMutationResult<Order, Error, UpdateOrderStatusData>",
      "useOrderHistory": "UseQueryResult<Order[], Error>",
      "useInventory": "UseQueryResult<InventoryItem[], Error>",
      "useUpdateInventory": "UseMutationResult<InventoryItem, Error, UpdateInventoryData>",
      "useCheckStock": "UseQueryResult<StockStatus, Error>"
    },
    "api": {
      "endpoints": ["/api/products", "/api/categories", "/api/cart", "/api/orders", "/api/inventory", "/api/reviews"],
      "methods": ["POST", "GET", "PATCH", "DELETE"]
    },
    "types": ["Product", "Category", "Review", "Cart", "CartItem", "Order", "InventoryItem", "CreateProductData", "UpdateProductData", "AddToCartData", "UpdateCartItemData", "CreateOrderData", "UpdateOrderStatusData", "UpdateInventoryData", "StockStatus", "CartCalculations"]
  },
  "prerequisites": {
    "adapters": [
      "database",
      "storage"
    ],
    "integrators": [
      "database-nextjs-integration"
    ],
    "capabilities": [
      "data-persistence",
      "file-storage"
    ]
  },
  "provides": {
    "capabilities": [
      "product-management",
      "shopping-cart",
      "order-management",
      "inventory-tracking",
      "ecommerce-analytics"
    ]
  },
  "parameters": {
    "backend": {
      "type": "select",
      "default": "database-nextjs",
      "description": "Backend implementation for e-commerce data",
      "required": true,
      "options": ["database-nextjs", "database-express", "database-fastify"]
    },
    "frontend": {
      "type": "select",
      "default": "shadcn",
      "description": "Frontend implementation for e-commerce UI",
      "required": true,
      "options": ["shadcn", "mui", "chakra"]
    },
    "features": {
      "type": "object",
      "default": {
        "productManagement": true,
        "shoppingCart": true,
        "orderManagement": true,
        "inventoryTracking": true,
        "reviews": true,
        "search": true,
        "categories": true
      },
      "description": "E-commerce features to enable",
      "required": false
    }
  },
  "implementations": {
    "backend": [
      "database-nextjs",
      "database-express",
      "database-fastify"
    ],
    "frontend": [
      "shadcn",
      "mui",
      "chakra"
    ]
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
