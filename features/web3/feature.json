{
  "id": "web3",
  "name": "Web3 Capability",
  "description": "Complete Web3 capability with wallet management, transactions, DeFi, and blockchain interactions",
  "version": "1.0.0",
  "category": "feature",
  "contract": {
    "hooks": {
      "useWallet": "UseQueryResult<WalletConnection | null, Error>",
      "useBalance": "UseQueryResult<WalletBalance, Error>",
      "useIsConnected": "boolean",
      "useConnectWallet": "UseMutationResult<WalletConnection, Error, ConnectWalletData>",
      "useDisconnectWallet": "UseMutationResult<void, Error, void>",
      "useTransactions": "UseQueryResult<Transaction[], Error>",
      "useTransaction": "UseQueryResult<Transaction, Error>",
      "useSendTransaction": "UseMutationResult<TransactionResult, Error, SendTransactionData>",
      "useContractRead": "UseMutationResult<any, Error, ContractReadData>",
      "useContractWrite": "UseMutationResult<TransactionResult, Error, ContractWriteData>",
      "useNetworks": "UseQueryResult<Network[], Error>",
      "useCurrentNetwork": "UseQueryResult<Network, Error>",
      "useSwitchNetwork": "UseMutationResult<void, Error, SwitchNetworkData>",
      "useAddNetwork": "UseMutationResult<void, Error, Network>",
      "useAssets": "UseQueryResult<Asset[], Error>",
      "useAsset": "UseQueryResult<Asset, Error>",
      "useAddToken": "UseMutationResult<void, Error, AddTokenData>",
      "useRemoveToken": "UseMutationResult<void, Error, string>",
      "useSwapQuote": "UseQueryResult<any, Error>",
      "useLiquidityPools": "UseQueryResult<any[], Error>",
      "useStakingInfo": "UseQueryResult<any, Error>",
      "useSwap": "UseMutationResult<TransactionResult, Error, any>",
      "useAddLiquidity": "UseMutationResult<TransactionResult, Error, any>",
      "useRemoveLiquidity": "UseMutationResult<TransactionResult, Error, any>",
      "useStake": "UseMutationResult<TransactionResult, Error, any>",
      "useUnstake": "UseMutationResult<TransactionResult, Error, any>"
    },
    "api": {
      "endpoints": ["/api/web3/connect", "/api/web3/disconnect", "/api/web3/balance", "/api/web3/transactions", "/api/web3/contract", "/api/web3/networks", "/api/web3/assets"],
      "methods": ["POST", "GET", "PATCH", "DELETE"]
    },
    "types": ["WalletConnection", "WalletBalance", "Transaction", "TransactionResult", "Network", "Asset", "ConnectWalletData", "SendTransactionData", "ContractReadData", "ContractWriteData", "SwitchNetworkData", "AddTokenData"]
  },
  "prerequisites": {
    "adapters": [
      "web3"
    ],
    "integrators": [
      "web3-nextjs-integration"
    ],
    "capabilities": [
      "blockchain-interaction"
    ]
  },
  "provides": {
    "capabilities": [
      "wallet-management",
      "transaction-management",
      "contract-interaction",
      "network-management",
      "asset-management",
      "defi-operations"
    ]
  },
  "parameters": {
    "backend": {
      "type": "select",
      "default": "web3-nextjs",
      "description": "Backend implementation for Web3 services",
      "required": true,
      "options": ["web3-nextjs", "web3-express", "web3-fastify"]
    },
    "frontend": {
      "type": "select", 
      "default": "shadcn",
      "description": "Frontend implementation for Web3 UI",
      "required": true,
      "options": ["shadcn", "mui", "chakra"]
    },
    "features": {
      "type": "object",
      "default": {
        "walletConnection": true,
        "transactionManagement": true,
        "contractInteraction": true,
        "networkSwitching": true,
        "assetManagement": true,
        "defiOperations": false
      },
      "description": "Web3 features to enable",
      "required": false
    },
    "networks": {
      "type": "array",
      "default": ["ethereum", "polygon", "arbitrum"],
      "description": "Supported blockchain networks",
      "required": false,
      "options": ["ethereum", "polygon", "arbitrum", "optimism", "base", "bsc"]
    }
  },
  "implementations": {
    "backend": [
      "web3-nextjs",
      "web3-express",
      "web3-fastify"
    ],
    "frontend": [
      "shadcn",
      "mui", 
      "chakra"
    ]
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
