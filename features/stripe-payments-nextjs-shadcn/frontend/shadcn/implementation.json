{
  "id": "stripe-payments-frontend-shadcn",
  "name": "Stripe Payments Frontend (Shadcn)",
  "description": "Frontend implementation of stripe-payments using Shadcn/ui components",
  "version": "1.0.0",
  "type": "frontend-implementation",
  "implements": "stripe-payments",
  "tech_stack": {
    "ui": "shadcn",
    "framework": "nextjs"
  },
  "prerequisites": {
    "modules": ["shadcn-ui", "nextjs"],
    "capabilities": ["ui-components", "form-validation", "payment-hooks"]
  },
  "provides": {
    "capabilities": [
      "payment-ui-components",
      "payment-forms",
      "payment-pages"
    ],
    "components": [
      "PaymentForm",
      "CheckoutButton",
      "PaymentMethodSelector",
      "SubscriptionCard",
      "SubscriptionManager",
      "PricingCard",
      "BillingHistory",
      "InvoiceTable",
      "InvoiceViewer",
      "PaymentAnalytics",
      "RevenueChart",
      "PaymentStats"
    ],
    "pages": [
      "/payments",
      "/payments/methods",
      "/subscriptions",
      "/subscriptions/[id]",
      "/billing",
      "/billing/invoices",
      "/analytics/payments"
    ]
  },
  "blueprint": "blueprint.json"
}
