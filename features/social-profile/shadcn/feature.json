{
  "id": "social-profile",
  "name": "Social Profile Capability",
  "description": "Complete social profile management system with social features, connections, and activity feeds",
  "version": "1.0.0",
  "category": "feature",
  "contract": {
    "hooks": {
      "useProfile": "UseQueryResult<Profile, Error>",
      "useUpdateProfile": "UseMutationResult<Profile, Error, UpdateProfileData>",
      "useUploadAvatar": "UseMutationResult<AvatarResult, Error, AvatarUploadData>",
      "useConnections": "UseQueryResult<Connection[], Error>",
      "useAddConnection": "UseMutationResult<Connection, Error, AddConnectionData>",
      "useRemoveConnection": "UseMutationResult<{ success: boolean }, Error, string>",
      "useActivityFeed": "UseQueryResult<Activity[], Error>",
      "useAddActivity": "UseMutationResult<Activity, Error, AddActivityData>",
      "useSocialSettings": "UseQueryResult<SocialSettings, Error>",
      "useUpdateSocialSettings": "UseMutationResult<SocialSettings, Error, UpdateSocialSettingsData>",
      "useNotifications": "UseQueryResult<Notification[], Error>",
      "useMarkNotificationRead": "UseMutationResult<Notification, Error, string>",
      "usePrivacySettings": "UseQueryResult<PrivacySettings, Error>",
      "useUpdatePrivacySettings": "UseMutationResult<PrivacySettings, Error, UpdatePrivacySettingsData>",
      "useBlockUser": "UseMutationResult<{ success: boolean }, Error, string>",
      "useUnblockUser": "UseMutationResult<{ success: boolean }, Error, string>",
      "useReportUser": "UseMutationResult<{ success: boolean }, Error, ReportUserData>"
    },
    "api": {
      "endpoints": ["/api/profile", "/api/profile/avatar", "/api/connections", "/api/activity", "/api/notifications", "/api/privacy", "/api/social-settings"],
      "methods": ["POST", "GET", "PATCH", "DELETE"]
    },
    "types": ["Profile", "UpdateProfileData", "AvatarResult", "AvatarUploadData", "Connection", "AddConnectionData", "Activity", "AddActivityData", "SocialSettings", "UpdateSocialSettingsData", "Notification", "PrivacySettings", "UpdatePrivacySettingsData", "ReportUserData"]
  },
  "prerequisites": {
    "adapters": [
      "shadcn-ui",
      "storage"
    ],
    "integrators": [
      "storage-nextjs-integration"
    ],
    "capabilities": [
      "file-storage",
      "social-networking"
    ]
  },
  "provides": {
    "capabilities": [
      "profile-management",
      "social-connections",
      "activity-feeds",
      "notifications",
      "privacy-controls",
      "social-settings"
    ]
  },
  "parameters": {
    "backend": {
      "type": "select",
      "default": "nextjs",
      "description": "Backend implementation for social profile",
      "required": true,
      "options": ["nextjs", "express", "fastify"]
    },
    "frontend": {
      "type": "select",
      "default": "shadcn",
      "description": "Frontend implementation for social profile UI",
      "required": true,
      "options": ["shadcn", "mui", "chakra"]
    },
    "features": {
      "walletProfile": {
        "type": "boolean",
        "default": true,
        "description": "Enable wallet profile features"
      },
      "web3Social": {
        "type": "boolean",
        "default": true,
        "description": "Enable Web3 social features"
      },
      "achievements": {
        "type": "boolean",
        "default": true,
        "description": "Enable achievements and badges"
      },
      "profileManagement": {
        "type": "boolean",
        "default": true,
        "description": "Enable profile management"
      },
      "socialConnections": {
        "type": "boolean",
        "default": true,
        "description": "Enable social connections"
      },
      "activityFeeds": {
        "type": "boolean",
        "default": true,
        "description": "Enable activity feeds"
      },
      "notifications": {
        "type": "boolean",
        "default": true,
        "description": "Enable notifications"
      },
      "privacyControls": {
        "type": "boolean",
        "default": true,
        "description": "Enable privacy controls"
      },
      "socialSettings": {
        "type": "boolean",
        "default": true,
        "description": "Enable social settings"
      },
      "avatarUpload": {
        "type": "boolean",
        "default": true,
        "description": "Enable avatar upload"
      },
      "blocking": {
        "type": "boolean",
        "default": true,
        "description": "Enable user blocking"
      },
      "reporting": {
        "type": "boolean",
        "default": true,
        "description": "Enable user reporting"
      }
    }
  },
  "implementations": {
    "backend": [
      "nextjs",
      "express",
      "fastify"
    ],
    "frontend": [
      "shadcn",
      "mui",
      "chakra"
    ]
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
