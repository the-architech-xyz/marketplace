{
  "id": "web3-wallet",
  "name": "Web3 Wallet & Blockchain",
  "description": "Complete Web3 wallet integration with blockchain interactions, transactions, and DeFi features",
  "version": "1.0.0",
  "category": "feature",
  "provides": {
    "hooks": {
      "useWallet": "() => UseQueryResult<WalletConnection>",
      "useConnectWallet": "() => UseMutationResult<WalletConnection, Error, ConnectWalletData>",
      "useDisconnectWallet": "() => UseMutationResult<void, Error, void>",
      "useBalance": "() => UseQueryResult<WalletBalance>",
      "useSendTransaction": "() => UseMutationResult<TransactionResult, Error, SendTransactionData>",
      "useContractRead": "() => UseQueryResult<any, Error, ContractReadData>",
      "useContractWrite": "() => UseMutationResult<TransactionResult, Error, ContractWriteData>"
    },
    "types": [
      "WalletConnection",
      "WalletBalance",
      "TransactionResult",
      "ConnectWalletData",
      "SendTransactionData",
      "ContractReadData",
      "ContractWriteData"
    ],
    "api": [
      "/api/web3/connect",
      "/api/web3/disconnect",
      "/api/web3/balance",
      "/api/web3/transaction"
    ]
  },
  "sub_features": {
    "wallet-connection": {
      "name": "Wallet Connection",
      "description": "Connect and manage Web3 wallets",
      "provides": {
        "components": ["ConnectButton", "DisconnectButton", "WalletCard"],
        "hooks": ["useWalletConnection"]
      }
    },
    "transaction-management": {
      "name": "Transaction Management",
      "description": "Send and track blockchain transactions",
      "provides": {
        "components": ["TransactionForm", "TransactionCard", "TransactionHistory"],
        "hooks": ["useTransactionManager"]
      }
    },
    "balance-display": {
      "name": "Balance Display",
      "description": "Display wallet balances and assets",
      "provides": {
        "components": ["BalanceDisplay", "AssetCard", "PortfolioView"],
        "hooks": ["useBalanceDisplay"]
      }
    },
    "network-management": {
      "name": "Network Management",
      "description": "Switch between blockchain networks",
      "provides": {
        "components": ["NetworkSwitcher", "NetworkIndicator", "NetworkSelector"],
        "hooks": ["useNetworkManager"]
      }
    }
  },
  "requirements": {
    "backend": {
      "framework": ["nextjs"],
      "capabilities": ["web3-service", "api-routes"]
    },
    "frontend": {
      "ui": ["shadcn"],
      "framework": ["nextjs"],
      "capabilities": ["ui-components", "web3-hooks"]
    }
  }
}
