{
  "id": "ai-chat",
  "name": "AI Chat Capability",
  "description": "Complete AI chat interface using Vercel AI SDK and Shadcn UI",
  "version": "1.0.0",
  "category": "feature",
  "contract": {
    "hooks": {
      "useChat": "UseQueryResult<ChatSession, Error>",
      "useMessages": "UseQueryResult<Message[], Error>",
      "useSendMessage": "UseMutationResult<Message, Error, SendMessageData>",
      "useStreamMessage": "UseMutationResult<StreamResult, Error, StreamMessageData>",
      "useCreateChat": "UseMutationResult<ChatSession, Error, CreateChatData>",
      "useUpdateChat": "UseMutationResult<ChatSession, Error, UpdateChatData>",
      "useDeleteChat": "UseMutationResult<{ success: boolean }, Error, string>",
      "useChatHistory": "UseQueryResult<ChatSession[], Error>",
      "useExportChat": "UseMutationResult<ExportResult, Error, ExportChatData>",
      "useImportChat": "UseMutationResult<ChatSession, Error, ImportChatData>",
      "useUploadFile": "UseMutationResult<FileUploadResult, Error, FileUploadData>",
      "useVoiceInput": "UseMutationResult<VoiceResult, Error, VoiceInputData>",
      "useVoiceOutput": "UseMutationResult<VoiceResult, Error, VoiceOutputData>",
      "useCodeHighlighting": "UseQueryResult<CodeHighlightingConfig, Error>",
      "useMarkdownSupport": "UseQueryResult<MarkdownConfig, Error>"
    },
    "api": {
      "endpoints": ["/api/chat", "/api/chat/messages", "/api/chat/stream", "/api/chat/export", "/api/chat/import", "/api/chat/upload", "/api/chat/voice"],
      "methods": ["POST", "GET", "PATCH", "DELETE"]
    },
    "types": ["ChatSession", "Message", "SendMessageData", "StreamResult", "StreamMessageData", "CreateChatData", "UpdateChatData", "ExportResult", "ExportChatData", "ImportChatData", "FileUploadResult", "FileUploadData", "VoiceResult", "VoiceInputData", "VoiceOutputData", "CodeHighlightingConfig", "MarkdownConfig"]
  },
  "prerequisites": {
    "adapters": [
      "vercel-ai-sdk",
      "shadcn-ui"
    ],
    "integrators": [
      "tanstack-query-nextjs-integration"
    ],
    "capabilities": [
      "ai-chat",
      "streaming",
      "file-upload"
    ]
  },
  "provides": {
    "capabilities": [
      "ai-conversation",
      "message-streaming",
      "file-upload",
      "voice-input-output",
      "code-highlighting",
      "markdown-support",
      "chat-export-import"
    ]
  },
  "parameters": {
    "backend": {
      "type": "select",
      "default": "vercel-ai-sdk",
      "description": "Backend implementation for AI chat",
      "required": true,
      "options": ["vercel-ai-sdk", "openai", "anthropic", "cohere"]
    },
    "frontend": {
      "type": "select",
      "default": "shadcn",
      "description": "Frontend implementation for AI chat UI",
      "required": true,
      "options": ["shadcn", "mui", "chakra"]
    },
    "features": {
      "type": "object",
      "default": {
        "chatInterface": true,
        "messageHistory": true,
        "streaming": true,
        "fileUpload": true,
        "voiceInput": false,
        "voiceOutput": false,
        "codeHighlighting": true,
        "markdownSupport": true
      },
      "description": "AI chat features to enable",
      "required": false
    }
  },
  "implementations": {
    "backend": [
      "vercel-ai-sdk",
      "openai",
      "anthropic",
      "cohere"
    ],
    "frontend": [
      "shadcn",
      "mui",
      "chakra"
    ]
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
