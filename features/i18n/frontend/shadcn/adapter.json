{
  "id": "features/i18n/frontend/shadcn",
  "name": "i18n Frontend (Shadcn)",
  "description": "Shadcn UI components for i18n, including locale switcher and language selector",
  "type": "feature",
  "version": "1.0.0",
  "role": "frontend-feature",
  "pattern": "infrastructure",
  "requires": [
    "framework/nextjs",
    "features/i18n/tech-stack",
    "ui/shadcn-ui"
  ],
  "provides": [
    "i18n-ui-components",
    "locale-switcher",
    "language-selector"
  ],
  "parameters": {
    "showFlags": {
      "type": "boolean",
      "default": true,
      "description": "Show flag emojis"
    },
    "showNativeNames": {
      "type": "boolean",
      "default": true,
      "description": "Show native language names"
    }
  }
}
