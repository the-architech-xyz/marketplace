{
  "id": "feature:emailing/shadcn",
  "name": "Emailing Feature (Shadcn)",
  "description": "Complete email management UI using Shadcn components",
  "type": "feature",
  "version": "1.0.0",
  "prerequisites": {
    "capabilities": ["emailing-backend-resend-nextjs"],
    "adapters": ["ui/shadcn-ui"]
  },
  "provides": ["emailing-ui"],
  "parameters": {
    "features": {
      "type": "object",
      "default": {
        "emailComposer": true,
        "emailList": true,
        "templates": true,
        "analytics": false,
        "campaigns": false,
        "scheduling": false,
        "advancedTemplates": false
      },
      "description": "Emailing UI features to enable",
      "required": false
    },
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light", "minimal"]
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
