{
  "id": "features/auth-ui/shadcn",
  "name": "Authentication UI (Shadcn)",
  "description": "Complete authentication UI using Shadcn components",
  "type": "feature",
  "version": "1.0.0",
  "role": "frontend-feature",
  "prerequisites": {
    "capabilities": [
      "auth-backend-better-auth-nextjs"
    ],
    "adapters": [
      "ui/shadcn-ui"
    ]
  },
  "requires": [],
  "provides": [
    "auth-ui-core",
    "{{#if features.passwordReset}}auth-ui-password-reset{{/if}}",
    "{{#if features.mfa}}auth-ui-mfa{{/if}}",
    "{{#if features.socialLogins}}auth-ui-social{{/if}}",
    "{{#if features.accountSettingsPage}}auth-ui-settings{{/if}}",
    "{{#if features.profileManagement}}auth-ui-profile{{/if}}"
  ],
  "parameters": {
    "features": {
      "signIn": {
        "type": "boolean",
        "default": true,
        "description": "Enable sign-in UI components"
      },
      "signUp": {
        "type": "boolean",
        "default": true,
        "description": "Enable sign-up UI components"
      },
      "passwordReset": {
        "type": "boolean",
        "default": true,
        "description": "Enables password reset functionality (forms and pages)"
      },
      "profile": {
        "type": "boolean",
        "default": true,
        "description": "Enable profile management UI components"
      },
      "mfa": {
        "type": "boolean",
        "default": false,
        "description": "Enables Multi-Factor Authentication setup and verification"
      },
      "socialLogins": {
        "type": "boolean",
        "default": false,
        "description": "Enables UI for Google, GitHub, etc. logins"
      },
      "accountSettingsPage": {
        "type": "boolean",
        "default": false,
        "description": "Generates a full page for managing account settings"
      },
      "profileManagement": {
        "type": "boolean",
        "default": true,
        "description": "Enables advanced profile management features"
      },
      "twoFactor": {
        "type": "boolean",
        "default": false,
        "description": "Enable two-factor authentication UI"
      },
      "organizationManagement": {
        "type": "boolean",
        "default": false,
        "description": "Enable organization management UI"
      }
    },
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": [
        "default",
        "dark",
        "light",
        "minimal"
      ]
    }
  },
  "internal_structure": {
    "core": {
      "provides": [
        "auth-ui-core"
      ],
      "templates": [
        "AuthForm.tsx",
        "LoginForm.tsx",
        "SignupForm.tsx",
        "UserProfile.tsx",
        "AuthGuard.tsx",
        "AuthLayout.tsx",
        "DashboardLayout.tsx",
        "useAuth.ts",
        "auth-types.ts",
        "auth-utils.ts"
      ]
    },
    "passwordReset": {
      "prerequisites": [
        "auth-ui-core"
      ],
      "provides": [
        "auth-ui-password-reset"
      ],
      "templates": [
        "ForgotPasswordForm.tsx",
        "ResetPasswordForm.tsx",
        "forgot-password/page.tsx",
        "reset-password/page.tsx"
      ]
    },
    "mfa": {
      "prerequisites": [
        "auth-ui-core"
      ],
      "provides": [
        "auth-ui-mfa"
      ],
      "templates": [
        "TwoFactorSetup.tsx",
        "EmailVerification.tsx",
        "useTwoFactor.ts"
      ]
    },
    "socialLogins": {
      "prerequisites": [
        "auth-ui-core"
      ],
      "provides": [
        "auth-ui-social"
      ],
      "templates": [
        "ConnectedAccounts.tsx"
      ]
    },
    "profileManagement": {
      "prerequisites": [
        "auth-ui-core"
      ],
      "provides": [
        "auth-ui-profile"
      ],
      "templates": [
        "ProfileManager.tsx",
        "useProfile.ts"
      ]
    },
    "accountSettingsPage": {
      "prerequisites": [
        "auth-ui-core",
        "auth-ui-password-reset",
        "auth-ui-mfa",
        "auth-ui-social"
      ],
      "provides": [
        "auth-ui-settings"
      ],
      "templates": [
        "AccountSettings.tsx",
        "SecuritySettings.tsx",
        "settings-page.tsx"
      ]
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
