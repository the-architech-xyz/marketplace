{
  "id": "feature:auth/shadcn",
  "name": "Authentication Feature (Shadcn)",
  "description": "Complete authentication UI using Shadcn components",
  "type": "feature",
  "version": "1.0.0",
  "prerequisites": {
    "capabilities": ["auth-backend-better-auth-nextjs"],
    "adapters": ["ui/shadcn-ui"]
  },
  "provides": ["auth-ui"],
  "parameters": {
    "features": {
      "type": "object",
      "default": {
        "loginForm": true,
        "signupForm": true,
        "passwordReset": true,
        "profileManagement": true,
        "userSettings": true,
        "sessionManagement": true,
        "twoFactorAuth": false,
        "socialAuth": true,
        "emailVerification": false
      },
      "description": "Authentication UI features to enable",
      "required": false
    },
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light", "minimal"]
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
