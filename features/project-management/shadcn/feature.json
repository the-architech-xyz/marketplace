{
  "id": "project-management",
  "name": "Project Management System",
  "description": "Complete project management system with kanban boards, task management, and team collaboration",
  "version": "1.0.0",
  "category": "feature",
  "blueprint": "blueprint.ts",
  "prerequisites": {
    "adapters": [
      "nextjs",
      "shadcn-ui",
      "drizzle"
    ],
    "integrators": [
      "drizzle-nextjs-integration"
    ],
    "capabilities": [
      "database-operations",
      "ui-components"
    ]
  },
  "provides": {
    "capabilities": [
      "kanban-board",
      "task-creation",
      "task-management",
      "project-organization",
      "team-collaboration",
      "basic-project-analytics"
    ]
  },
  "parameters": {
    "theme": {
      "type": "string",
      "default": "default",
      "description": "UI theme variant",
      "required": false,
      "options": ["default", "dark", "light"]
    },
    "features": {
      "kanban": {
        "type": "boolean",
        "default": true,
        "description": "Enable kanban board functionality"
      },
      "timeline": {
        "type": "boolean",
        "default": true,
        "description": "Enable timeline view"
      },
      "sprint": {
        "type": "boolean",
        "default": true,
        "description": "Enable sprint management"
      },
      "kanbanBoard": {
        "type": "boolean",
        "default": true,
        "description": "Enable kanban board functionality"
      },
      "taskCreation": {
        "type": "boolean",
        "default": true,
        "description": "Enable task creation"
      },
      "taskManagement": {
        "type": "boolean",
        "default": true,
        "description": "Enable task management"
      },
      "projectOrganization": {
        "type": "boolean",
        "default": true,
        "description": "Enable project organization"
      },
      "teamCollaboration": {
        "type": "boolean",
        "default": true,
        "description": "Enable team collaboration"
      },
      "basicAnalytics": {
        "type": "boolean",
        "default": true,
        "description": "Enable basic analytics"
      }
    }
  },
  "sub_features": {
    "time-tracking": {
      "name": "Time Tracking",
      "description": "Track time spent on tasks and projects",
      "optional": true,
      "prerequisites": {
        "capabilities": ["task-management"]
      }
    },
    "gantt-view": {
      "name": "Gantt View",
      "description": "Gantt chart view for project timeline visualization",
      "optional": true,
      "prerequisites": {
        "capabilities": ["task-management", "project-organization"]
      }
    },
    "project-reporting": {
      "name": "Project Reporting",
      "description": "Advanced reporting and analytics for projects",
      "optional": true,
      "prerequisites": {
        "capabilities": ["basic-project-analytics", "task-management"]
      }
    }
  },
  "constraints": {
    "minReactVersion": ">=18.0.0",
    "minNextjsVersion": ">=13.0.0"
  }
}
