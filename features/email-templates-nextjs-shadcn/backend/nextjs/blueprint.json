{
  "id": "email-templates-backend-nextjs",
  "name": "Email Templates Backend (Next.js)",
  "description": "Backend implementation of email-templates using Next.js API routes and Resend",
  "version": "1.0.0",
  "actions": [
    {
      "type": "CREATE_FILE",
      "path": "src/hooks/email/use-email-templates.ts",
      "template": "templates/use-email-templates.ts.tpl"
    },
    {
      "type": "CREATE_FILE",
      "path": "src/hooks/email/use-email-campaigns.ts",
      "template": "templates/use-email-campaigns.ts.tpl"
    },
    {
      "type": "CREATE_FILE",
      "path": "src/hooks/email/use-send-email.ts",
      "template": "templates/use-send-email.ts.tpl"
    },
    {
      "type": "CREATE_FILE",
      "path": "src/hooks/email/use-email-analytics.ts",
      "template": "templates/use-email-analytics.ts.tpl"
    },
    {
      "type": "CREATE_FILE",
      "path": "src/types/email.ts",
      "template": "templates/email-types.ts.tpl"
    },
    {
      "type": "CREATE_FILE",
      "path": "src/app/api/email/templates/route.ts",
      "template": "templates/email-templates-api.ts.tpl"
    },
    {
      "type": "CREATE_FILE",
      "path": "src/app/api/email/campaigns/route.ts",
      "template": "templates/email-campaigns-api.ts.tpl"
    },
    {
      "type": "CREATE_FILE",
      "path": "src/app/api/email/send/route.ts",
      "template": "templates/email-send-api.ts.tpl"
    }
  ]
}
