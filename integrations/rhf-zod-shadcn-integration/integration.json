{
  "id": "integrations/rhf-zod-shadcn-integration",
  "name": "RHF + Zod + Shadcn Integration",
  "description": "Golden Core integrator that connects React Hook Form, Zod validation, and Shadcn UI components",
  "version": "1.0.0",
  "category": "integration",
  "tags": ["react-hook-form", "zod", "shadcn", "forms", "validation", "golden-core"],
  "compatibility": {
    "frameworks": ["nextjs", "react"],
    "adapters": ["core/forms", "ui/shadcn-ui"]
  },
  "dependencies": {
    "adapters": ["core/forms", "ui/shadcn-ui"]
  },
  "features": {
    "formFields": true,
    "validation": true,
    "errorHandling": true,
    "accessibility": true,
    "customComponents": true,
    "formBuilder": true
  },
  "parameters": {
    "components": {
      "type": "array",
      "description": "Form components to generate",
      "default": ["input", "textarea", "select", "checkbox", "radio", "switch"],
      "enum": ["input", "textarea", "select", "checkbox", "radio", "switch", "date", "file", "password"]
    },
    "validation": {
      "type": "object",
      "description": "Validation configuration",
      "properties": {
        "mode": {
          "type": "string",
          "default": "onChange",
          "enum": ["onChange", "onBlur", "onSubmit", "onTouched", "all"]
        },
        "reValidateMode": {
          "type": "string",
          "default": "onChange",
          "enum": ["onChange", "onBlur", "onSubmit"]
        }
      }
    },
    "errorHandling": {
      "type": "object",
      "description": "Error handling configuration",
      "properties": {
        "showErrors": {
          "type": "boolean",
          "default": true
        },
        "errorPosition": {
          "type": "string",
          "default": "below",
          "enum": ["below", "above", "inline"]
        }
      }
    }
  },
  "blueprint": {
    "file": "blueprint.ts"
  }
}
