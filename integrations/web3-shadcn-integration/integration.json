{
  "id": "web3-shadcn-integration",
  "name": "Web3 Shadcn Integration",
  "description": "Web3 UI components with Shadcn/ui for modern blockchain applications",
  "version": "1.0.0",
  "category": "ui",
  "requirements": {
    "capabilities": ["shadcn-ui", "web3-nextjs-integration"]
  },
  "capabilities": [
    "web3-ui",
    "wallet-connection",
    "transaction-ui",
    "balance-display",
    "network-switching",
    "shadcn-components"
  ],
  "limitations": "Requires web3-nextjs-integration for functionality",
  "parameters": {
    "components": {
      "type": "array",
      "default": [
        "WalletCard",
        "TransactionCard", 
        "NetworkSwitcher",
        "ConnectButton",
        "DisconnectButton",
        "BalanceDisplay",
        "TransactionForm"
      ],
      "description": "Web3 UI components to install",
      "required": false
    }
  },
  "constraints": {}
}