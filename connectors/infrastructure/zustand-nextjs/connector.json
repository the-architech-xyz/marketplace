{
  "id": "connectors/infrastructure/zustand-nextjs",
  "name": "Zustand NextJS Connector",
  "description": "Zustand state management setup and configuration for NextJS applications",
  "type": "connector",
  "version": "1.0.0",
  "connects": ["zustand", "nextjs"],
  "provides": [
    "state-management",
    "persistence",
    "devtools",
    "ssr-support"
  ],
  "requires": ["framework/nextjs", "core/golden-stack"],
  "parameters": {
    "persistence": {
      "name": "Persistence",
      "description": "State persistence support",
      "type": "boolean",
      "default": true
    },
    "devtools": {
      "name": "DevTools",
      "description": "Zustand DevTools integration",
      "type": "boolean",
      "default": false
    },
    "ssr": {
      "name": "SSR Support",
      "description": "Server-side rendering support",
      "type": "boolean",
      "default": true
    }
  }
}
