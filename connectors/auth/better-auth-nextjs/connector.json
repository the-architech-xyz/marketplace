{
  "id": "connectors/auth/better-auth-nextjs",
  "name": "Better Auth + Next.js Connector",
  "description": "Complete Better Auth integration for Next.js applications with React hooks",
  "type": "connector",
  "version": "1.0.0",
  "connects": ["better-auth", "nextjs", "react"],
  "provides": [
    "auth-backend-complete",
    "auth-sdk-native-hooks",
    "auth-api-routes",
    "auth-middleware",
    "session-management",
    "oauth-providers",
    "two-factor-auth"
  ],
  "role": "sdk-backend-connector",
  "pattern": "sdk-driven",
  "requires": [
    "framework/nextjs",
    "auth/better-auth"
  ],
  "requiresCapabilities": [
    {
      "category": "database",
      "optional": false,
      "reason": "Better Auth connector requires database for user authentication, session management, and organization/team storage"
    }
  ],
  "capabilities": {
    "authentication": {
      "enabled": true,
      "features": {
        "email-password": true,
        "oauth": true,
        "magic-link": true,
        "two-factor": true,
        "session-management": true
      }
    },
    "organizations": {
      "enabled": true,
      "features": {
        "management": true,
        "members": true,
        "invitations": true
      }
    },
    "teams": {
      "enabled": true,
      "features": {
        "management": true,
        "members": true
      }
    }
  },
  "parameters": {
    "emailVerification": {
      "type": "boolean",
      "default": true,
      "description": "Enable email verification"
    },
    "oauthProviders": {
      "type": "array",
      "default": ["google", "github"],
      "description": "Enabled OAuth providers"
    },
    "twoFactor": {
      "type": "boolean",
      "default": true,
      "description": "Enable two-factor authentication"
    },
    "organizations": {
      "type": "boolean",
      "default": true,
      "description": "Enable organization support"
    },
    "teams": {
      "type": "boolean",
      "default": true,
      "description": "Enable team support"
    }
  }
}

