{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@thearchitech.xyz/marketplace": ["./index.js"],
      "@thearchitech.xyz/marketplace/types": ["./types/index.ts"],
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "adapters/**/blueprint.ts",
    "connectors/**/blueprint.ts",
    "features/**/blueprint.ts",
    "types/**/*.ts",
    "scripts/**/*.ts",
    "genomes/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "genomes/test/**",
    "genomes/use-cases/**"
  ]
}
